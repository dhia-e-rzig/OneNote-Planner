<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:OneNoteAgent.Maui.ViewModels"
             xmlns:models="clr-namespace:OneNoteAgent.Maui.Models"
             x:Class="OneNoteAgent.Maui.Views.ActivityPage"
             x:DataType="vm:ActivityViewModel"
             Title="Recent Activity"
             BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}">

    <Grid RowDefinitions="Auto, *" Padding="16,16,16,32">
        
        
        <!-- Header -->
        <Grid ColumnDefinitions="Auto, *, Auto" Margin="0,0,0,16">
            <Button Text="&lt;"
                    Command="{Binding GoBackCommand}"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource Primary}"
                    FontSize="20"
                    FontAttributes="Bold"
                    Padding="12,0"
                    WidthRequest="48"/>
            <Label Grid.Column="1"
                   Text="Recent Activity" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource White}}"/>
            <Button Grid.Column="2"
                    Text="Refresh"
                    Command="{Binding RefreshCommand}"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource Primary}"/>
        </Grid>

        <!-- Activity List -->
        <CollectionView Grid.Row="1" 
                        ItemsSource="{Binding Activities}"
                        EmptyView="No recent activity">
            <CollectionView.Footer>
                <!-- Bottom padding to ensure last items aren't clipped -->
                <BoxView HeightRequest="40" Color="Transparent"/>
            </CollectionView.Footer>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:AuditLogEntry">
                    <Border Margin="0,4" 
                            Padding="12"
                            StrokeShape="RoundRectangle 8"
                            Stroke="Transparent"
                            BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray800}}">
                        <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto, Auto, Auto, Auto">
                            <!-- Status indicator -->
                            <BoxView Grid.RowSpan="5"
                                     WidthRequest="4"
                                     CornerRadius="2"
                                     Margin="0,0,12,0"
                                     BackgroundColor="{Binding Success, Converter={StaticResource BoolToSuccessColorConverter}}"/>
                            
                            <!-- Header row: Tool name and timestamp -->
                            <Grid Grid.Column="1" ColumnDefinitions="*, Auto">
                                <!-- Tool name or operation -->
                                <Label Text="{Binding ToolName}"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                                       IsVisible="{Binding ToolName, Converter={StaticResource IsNotNullConverter}}"/>
                                <Label Text="{Binding Operation}"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Danger}"
                                       IsVisible="{Binding ToolName, Converter={StaticResource IsNullConverter}}"/>
                                
                                <!-- Timestamp -->
                                <Label Grid.Column="1"
                                       Text="{Binding Timestamp, StringFormat='{0:HH:mm:ss}'}"
                                       FontSize="12"
                                       TextColor="{StaticResource Gray500}"/>
                            </Grid>
                            
                            <!-- Tool Input -->
                            <VerticalStackLayout Grid.Row="1" Grid.Column="1"
                                                 IsVisible="{Binding ToolInput, Converter={StaticResource IsNotNullConverter}}"
                                                 Margin="0,8,0,0">
                                <Label Text="Input:"
                                       FontSize="10"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Gray500}"/>
                                <Border BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray700}}"
                                        StrokeShape="RoundRectangle 4"
                                        Stroke="Transparent"
                                        Padding="8"
                                        Margin="0,4,0,0">
                                    <Label Text="{Binding ToolInput}"
                                           FontSize="11"
                                           FontFamily="Consolas"
                                           TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                                           LineBreakMode="WordWrap"
                                           MaxLines="5"/>
                                </Border>
                            </VerticalStackLayout>
                            
                            <!-- Tool Output -->
                            <VerticalStackLayout Grid.Row="2" Grid.Column="1"
                                                 IsVisible="{Binding ToolOutput, Converter={StaticResource IsNotNullConverter}}"
                                                 Margin="0,8,0,0">
                                <Label Text="Output:"
                                       FontSize="10"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Gray500}"/>
                                <Border BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray700}}"
                                        StrokeShape="RoundRectangle 4"
                                        Stroke="Transparent"
                                        Padding="8"
                                        Margin="0,4,0,0">
                                    <Label Text="{Binding ToolOutput}"
                                           FontSize="11"
                                           FontFamily="Consolas"
                                           TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                                           LineBreakMode="WordWrap"
                                           MaxLines="5"/>
                                </Border>
                            </VerticalStackLayout>
                            
                            <!-- Error message if any -->
                            <Label Grid.Row="3"
                                   Grid.Column="1"
                                   Text="{Binding ErrorMessage}"
                                   FontSize="12"
                                   TextColor="{StaticResource Danger}"
                                   IsVisible="{Binding ErrorMessage, Converter={StaticResource IsNotNullConverter}}"
                                   Margin="0,8,0,0"
                                   LineBreakMode="WordWrap"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
