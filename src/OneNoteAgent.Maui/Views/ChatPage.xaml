<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:OneNoteAgent.Maui.ViewModels"
             xmlns:models="clr-namespace:OneNoteAgent.Maui.Models"
             x:Class="OneNoteAgent.Maui.Views.ChatPage"
             x:DataType="vm:ChatViewModel"
             Title="Copilot Chat"
             BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}">

    <Grid RowDefinitions="Auto, *, Auto, Auto" Padding="16">
        
        <!-- Header -->
        <Grid ColumnDefinitions="*, Auto, Auto" Margin="0,0,0,16">
            <VerticalStackLayout>
                <Label Text="Copilot Chat" 
                       FontSize="24" 
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource White}}"/>
                <Label Text="{Binding StatusMessage}" 
                       FontSize="12" 
                       TextColor="{StaticResource Gray500}"/>
            </VerticalStackLayout>
            
            <Button Grid.Column="1"
                    Text="Reset"
                    Command="{Binding ResetConversationCommand}"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource Gray500}"
                    Margin="0"/>
            
            <Button Grid.Column="2"
                    Text="Activity"
                    Command="{Binding ViewActivityCommand}"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource Primary}"
                    Margin="8,0"/>
        </Grid>

        <!-- Messages List -->
        <CollectionView Grid.Row="1" 
                        ItemsSource="{Binding Messages}"
                        x:Name="MessagesCollectionView">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="4"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:ChatMessage">
                    <Border Padding="12"
                            StrokeShape="RoundRectangle 12"
                            Stroke="Transparent"
                            StrokeThickness="0"
                            Style="{x:Null}"
                            Background="{Binding Role, Converter={StaticResource RoleToBackgroundColor}}">
                        <VerticalStackLayout>
                            <Grid ColumnDefinitions="*, Auto">
                                <Label Text="{Binding Role, Converter={StaticResource RoleToDisplayName}}"
                                       FontSize="10"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Gray500}"
                                       Margin="0,0,0,4"/>
                                <!-- Streaming indicator -->
                                <HorizontalStackLayout Grid.Column="1" 
                                                       IsVisible="{Binding IsStreaming}"
                                                       Spacing="4">
                                    <ActivityIndicator IsRunning="{Binding IsStreaming}"
                                                       HeightRequest="12"
                                                       WidthRequest="12"
                                                       Color="{StaticResource Primary}"/>
                                    <Label Text="typing..."
                                           FontSize="10"
                                           TextColor="{StaticResource Gray400}"
                                           FontAttributes="Italic"/>
                                </HorizontalStackLayout>
                            </Grid>
                            <!-- Message content with markdown rendering -->
                            <Label Text="{Binding Content, Mode=OneWay, Converter={StaticResource MarkdownToHtmlConverter}}"
                                   TextType="Html"
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                                   LineBreakMode="WordWrap"
                                   Margin="0"/>
                            <Label Text="{Binding Timestamp, StringFormat='{0:HH:mm}'}"
                                   FontSize="10"
                                   TextColor="{StaticResource Gray400}"
                                   HorizontalOptions="End"
                                   Margin="0,8,0,0"
                                   IsVisible="{Binding IsStreaming, Converter={StaticResource InvertedBoolConverter}}"/>
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Status/Thinking Indicator -->
        <Border Grid.Row="2" 
                IsVisible="{Binding IsLoading}"
                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray800}}"
                StrokeShape="RoundRectangle 12"
                Stroke="{StaticResource Gray300}"
                Padding="12"
                Margin="0,8"
                MaximumHeightRequest="180">
            <VerticalStackLayout>
                <HorizontalStackLayout Spacing="8">
                    <ActivityIndicator IsRunning="{Binding IsLoading}" 
                                       Color="{StaticResource Primary}"
                                       HeightRequest="20"
                                       WidthRequest="20"/>
                    <VerticalStackLayout>
                        <Label Text="{Binding StatusMessage}" 
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"/>
                        <Label Text="{Binding CurrentToolName, StringFormat='Tool: {0}'}"
                               FontSize="11"
                               TextColor="{StaticResource Gray500}"
                               IsVisible="{Binding CurrentToolName, Converter={StaticResource IsNotNullConverter}}"/>
                    </VerticalStackLayout>
                </HorizontalStackLayout>
                <ScrollView x:Name="ThinkingScrollView"
                            IsVisible="{Binding ThinkingContent, Converter={StaticResource IsNotNullConverter}}"
                            Margin="0,8,0,8"
                            MaximumHeightRequest="100"
                            VerticalScrollBarVisibility="Always">
                    <Label Text="{Binding ThinkingContent}"
                           FontSize="11"
                           TextColor="{StaticResource Gray500}"
                           FontAttributes="Italic"
                           LineBreakMode="WordWrap"/>
                </ScrollView>
            </VerticalStackLayout>
        </Border>

        <!-- Input Area -->
        <Grid Grid.Row="3" 
              ColumnDefinitions="*, Auto" 
              Margin="0,8,0,0">
            <Border Padding="12,10" 
                    StrokeShape="RoundRectangle 16"
                    Stroke="{StaticResource Gray300}"
                    StrokeThickness="1"
                    BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray800}}"
                    VerticalOptions="End">
                <Editor x:Name="MessageEditor"
                        Placeholder="Ask me anything..."
                        Text="{Binding MessageInput}"
                        FontSize="14"
                        AutoSize="TextChanges"
                        BackgroundColor="Transparent"/>
            </Border>
            
            <!-- Send Button (visible when not loading) -->
            <Button Grid.Column="1"
                    Text="Send"
                    Command="{Binding SendMessageCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    CornerRadius="16"
                    WidthRequest="64"
                    HeightRequest="48"
                    Margin="8,0,0,0"
                    VerticalOptions="End"
                    IsVisible="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"/>
            
            <!-- Stop Button (visible when loading) -->
            <Button Grid.Column="1"
                    Text="Stop"
                    Command="{Binding StopCommand}"
                    BackgroundColor="{StaticResource Danger}"
                    TextColor="White"
                    CornerRadius="16"
                    WidthRequest="64"
                    HeightRequest="48"
                    Margin="8,0,0,0"
                    VerticalOptions="End"
                    IsVisible="{Binding IsLoading}"/>
        </Grid>
    </Grid>
</ContentPage>
