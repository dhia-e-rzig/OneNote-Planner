<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:OneNoteAgent.Maui"
             xmlns:converters="clr-namespace:OneNoteAgent.Maui.Converters"
             x:Class="OneNoteAgent.Maui.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Chat Converters -->
            <converters:RoleToDisplayNameConverter x:Key="RoleToDisplayName" />
            <converters:RoleToBackgroundColorConverter x:Key="RoleToBackgroundColor" />
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <converters:IsNotNullConverter x:Key="IsNotNullConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
